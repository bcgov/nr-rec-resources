{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": [
      "vite/client",
      "vitest/globals",
      "cypress",
      "node",
      "cypress-file-upload",
      "@testing-library/cypress"
    ],
    "baseUrl": "./",
    "paths": {
      "@": ["src"],
      "test": ["test"],
      "test/*": ["test/*"],
      "@/*": ["src/*"],
      "~/*": ["node_modules/*"]
    }
  },
  "include": [
    "**/*.d.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.js",
    "**/*.ts",
    "**/*.tsx",
    "eslint.config.mjs"
  ]
}
