{
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "bundler",
    "strict": false,
    "noUncheckedIndexedAccess": true,
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2022",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "lib": ["es2022"],
    "types": ["vitest/globals", "node"],
    "paths": {
      "@shared/*": ["../../shared/src/*"],
      "@generated/prisma": ["src/generated/prisma/client"],
      "@generated/prisma/*": ["src/generated/prisma/*"],
      "@prisma-generated-sql/*": ["src/prisma-generated-sql/*"]
    }
  },
  "tsc-alias": {
    "resolveFullPaths": true
  },
  "include": ["src/**/*.ts", "e2e/**/*.ts", "**/*.ts", "**/*.mjs", "**/*.mts"]
}
